<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!-- 1、classPathEntry:引入数据库的JDBC驱动的jar包地址 (**此处写自己本地的jar包路径**)-->
    <classPathEntry location="E:\maven\apache-maven-3.6.2\repository\mysql\mysql-connector-java\8.0.18\mysql-connector-java-8.0.18.jar" />

    <context id="curtain" targetRuntime="MyBatis3">

        <commentGenerator>
            <!-- 2、设置是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <!--3、配置Mysql数据库连接的信息：驱动类、连接地址、用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://rm-2zee28k1n7zndw92goo.mysql.rds.aliyuncs.com/minipro_dev?autoReconnect=true"
                        userId="minipro"
                        password="minipro@2019">
        </jdbcConnection>
        <!--4、配置Oracle数据库连接的信息：驱动类、连接地址、用户名、密码 -->
        <!-- <jdbcConnection driverClass="oracle.jdbc.OracleDriver" connectionURL="jdbc:oracle:thin:@127.0.0.1:1521:yycg"
            userId="yycg" password="yycg"> </jdbcConnection> -->

        <!-- 默认false，
                      把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer
               true，把JDBC DECIMAL 和 NUMERIC 类型解析为java.math.BigDecimal -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!--5、设置pojo生成位置
          targetProject:设置生成PO类生成位置的工程名称
          targetPackage="com.it.pojo":PO生成的包位置
        -->
        <javaModelGenerator targetPackage="com.dandelion.demo.bean.tableDO.product"
                            targetProject="./src/main/java">
            <!-- 1）enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="true" />
            <!-- 2）设置从数据库返回的值被清理前后的空格 -->
            <property name="trimStrings" value="true" />
        </javaModelGenerator>
        <!--6、设置生成mapper接口的位置
                targetProject:设置生成mapper类生成位置的工程名称
                targetPackage="com.it.mapper":mapper生成的包位置
         -->
        <sqlMapGenerator targetPackage="/"
                         targetProject="./src/main/resources/mybatis/mapper/">
            <!-- 1）enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false" />
        </sqlMapGenerator>
        <!-- 7、设置生成mapper的xml配置文件位置
                targetProject:设置生成xml文件类生成位置的工程名称
                targetPackage="com.it.mapper":xml文件生成的包位置
         -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.dandelion.demo.mapper"
                             targetProject="./src/main/java">
            <!-- 1）enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false" />
        </javaClientGenerator>


        <!-- 8、配置将哪些表进行逆向工程设置 -->
        <table tableName="tbl_product"
               enableCountByExample="true" enableUpdateByExample="true"
               enableDeleteByExample="true" enableSelectByExample="true"
               selectByExampleQueryId="true">
            <property name="useActualColumnNames" value="false" />
            <generatedKey column="id" sqlStatement="SELECT LAST_INSERT_ID()" identity="true" type="post" />
            <columnOverride column="price" javaType="java.math.BigDecimal"></columnOverride>
            <columnOverride column="price_strike" javaType="java.math.BigDecimal"></columnOverride>
           <!-- <columnOverride column="property" jdbcType="VARCHAR" /> -->
            <!-- <columnOverride column="content" jdbcType="VARCHAR" />-->
        </table>
